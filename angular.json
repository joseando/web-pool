{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "openchia": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {},
      "i18n": {
        "sourceLocale": "en",
        "locales": {
          "cs": {
            "translation": "src/locale/cs.xlf"
          },
          "de": {
            "translation": "src/locale/de.xlf"
          },
          "es": {
            "translation": "src/locale/es.xlf"
          },
          "fr": {
            "translation": "src/locale/fr.xlf"
          },
          "hu": {
            "translation": "src/locale/hu.xlf"
          },
          "pl": {
            "translation": "src/locale/pl.xlf"
          },
          "pt": {
            "translation": "src/locale/pt-BR.xlf"
          },
          "ru": {
            "translation": "src/locale/ru.xlf"
          },
          "sk": {
            "translation": "src/locale/sk.xlf"
          },
          "zh-CN": {
            "translation": "src/locale/zh-Hans-CN.xlf"
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/openchia",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.app.json",
            "allowedCommonJsDependencies": [
              "rxjs/add/operator/filter",
              "ng2-nouislider"
            ],
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/robots.txt",
              "src/security.txt",
              "src/sitemap.xml"
            ],
            "styles": [
              "src/styles.css",
              "src/assets/scss/argon.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "aot": true,
              "localize": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            },
            "pt": {
              "localize": [
                "pt"
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "openchia:build",
            "proxyConfig": "src/proxy.conf.json",
            "host": "0.0.0.0",
            "port": 443
          },
          "configurations": {
            "production": {
              "browserTarget": "openchia:build:production"
            },
            "pt": {
              "browserTarget": "openchia:build:pt"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "openchia:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "src/karma.conf.js",
            "styles": [
              "src/styles.css"
            ],
            "scripts": [],
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/robots.txt",
              "src/security.txt",
              "src/sitemap.xml"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "openchia-e2e": {
      "root": "e2e/",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "openchia:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "openchia:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "e2e/tsconfig.e2e.json",
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "openchia",
  "cli": {
    "analytics": false
  }
}